{
  "annotations": {
    "list": []
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [
    {
      "asDropdown": false,
      "icon": "external link",
      "includeVars": false,
      "keepTime": true,
      "tags": [],
      "targetBlank": true,
      "title": "Service Overview",
      "type": "link",
      "url": "/d/service-overview"
    }
  ],
  "panels": [
    {
      "title": "Order Service - Request Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 20
          },
          "unit": "reqps",
          "color": { "mode": "fixed", "fixedColor": "blue" }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum(rate(span_metrics_calls_total{service_name=\"order-service\", span_kind=\"SPAN_KIND_SERVER\"}[1m]))",
          "legendFormat": "Total requests",
          "refId": "A"
        },
        {
          "expr": "sum(rate(span_metrics_calls_total{service_name=\"order-service\", span_kind=\"SPAN_KIND_SERVER\", status_code=\"STATUS_CODE_ERROR\"}[1m]))",
          "legendFormat": "Errors",
          "refId": "B"
        }
      ]
    },
    {
      "title": "Order Service - Error Rate %",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.01 },
              { "color": "orange", "value": 0.05 },
              { "color": "red", "value": 0.1 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum(rate(span_metrics_calls_total{service_name=\"order-service\", span_kind=\"SPAN_KIND_SERVER\", status_code=\"STATUS_CODE_ERROR\"}[5m])) / sum(rate(span_metrics_calls_total{service_name=\"order-service\", span_kind=\"SPAN_KIND_SERVER\"}[5m]))",
          "legendFormat": "Error rate",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Order Service - Success / Fail Count",
      "type": "stat",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "" },
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Successes" },
            "properties": [{ "id": "color", "value": { "mode": "fixed", "fixedColor": "green" } }]
          },
          {
            "matcher": { "id": "byName", "options": "Failures" },
            "properties": [{ "id": "color", "value": { "mode": "fixed", "fixedColor": "red" } }]
          }
        ]
      },
      "targets": [
        {
          "expr": "sum(increase(span_metrics_calls_total{service_name=\"order-service\", span_kind=\"SPAN_KIND_SERVER\", status_code!=\"STATUS_CODE_ERROR\"}[5m]))",
          "legendFormat": "Successes",
          "refId": "A"
        },
        {
          "expr": "sum(increase(span_metrics_calls_total{service_name=\"order-service\", span_kind=\"SPAN_KIND_SERVER\", status_code=\"STATUS_CODE_ERROR\"}[5m]))",
          "legendFormat": "Failures",
          "refId": "B"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "colorMode": "value"
      }
    },
    {
      "title": "Order Service - Latency Distribution",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          },
          "unit": "s"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum by (le) (rate(span_metrics_duration_milliseconds_bucket{service_name=\"order-service\", span_kind=\"SPAN_KIND_SERVER\"}[5m])))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(span_metrics_duration_milliseconds_bucket{service_name=\"order-service\", span_kind=\"SPAN_KIND_SERVER\"}[5m])))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(span_metrics_duration_milliseconds_bucket{service_name=\"order-service\", span_kind=\"SPAN_KIND_SERVER\"}[5m])))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ]
    },
    {
      "title": "Downstream Service Latency (from Order Service)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          },
          "unit": "s"
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (service_name, le) (rate(span_metrics_duration_milliseconds_bucket{service_name=~\"inventory-service|payment-service\", span_kind=\"SPAN_KIND_SERVER\"}[5m])))",
          "legendFormat": "{{service_name}} p95",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Order Service Traces",
      "type": "table",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 24 },
      "datasource": { "type": "tempo", "uid": "tempo" },
      "targets": [
        {
          "queryType": "nativeSearch",
          "serviceName": "order-service",
          "limit": 20,
          "refId": "A"
        }
      ]
    },
    {
      "title": "Order Service Logs",
      "type": "logs",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 32 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "{exporter=\"OTLP\"} |= \"order-service\" | json",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "sortOrder": "Descending",
        "enableLogDetails": true
      }
    }
  ],
  "schemaVersion": 39,
  "tags": ["observability", "demo", "order-service"],
  "templating": { "list": [] },
  "time": { "from": "now-15m", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "Order Service Detail",
  "uid": "order-service-detail",
  "version": 1
}
